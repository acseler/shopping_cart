.book-item
  %h4= truncate(book.title, length: 50, separator: ' ')
  %p= book.price
  - if current_user
    = form_tag shopping_cart.add_order_items_path, method: :post, id: 'add' do
      = hidden_field_tag :product_id, book.id
      = hidden_field_tag :product_type, book.class
      = hidden_field_tag :price, book.price
      = submit_tag t(:add_to_cart), class: 'btn btn-default'